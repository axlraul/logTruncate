auxPath="{{ auxPath }}"
echo $auxPath
truncated=0
compressed=0
minLogSize={{ minLogSize }}
arrayPaths=(
{% for item in customPaths.results %}
{% if item.stat.exists == true %}
{{ item.item.path }}
{% endif %}
{% endfor %}
{% for item in IHS.files %}
{% if item.isreg == true %}
{{ item.path }}
{% endif %}
{% endfor %}
{% for item in WAS.files %}
{% if item.isreg == true %}
{{ item.path }}
{% endif %}
{% endfor %}
)

arrayRotatedPaths=(
{% for item in customPaths.results %}
{% if item.stat.exists == true %}
{{ item.item.wildcard }}
{% endif %}
{% endfor %}
{% if IHS.matched > 0 %}
/log/apps/websphere85/appServer/*/SystemError_*00.00*.log
